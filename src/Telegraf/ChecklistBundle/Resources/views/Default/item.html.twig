<li class="checklistItem" id="item_{{ item.id }}">
	<input type="checkbox" class="tickItem" id="is_ticked_{{ item.id }}" {% if item.isTicked %}checked="checked"{% endif %} />
	<span class="itemText">{{ item.text }}</span>
  <ul class="itemActions">
  	<li><a href="#">Edit</a></li>
  	<li><a href="#" id="delete_{{ item.id }}" class="deleteItem">Delete</a></li>
  	<li>Created: {{ item.created|date('m/d/y g:i:s a') }}</li>
  </ul>
</li>

{% if ajax %}
<script>
	$("#is_ticked_{{ item.id }}").data("id", "{{ item.id }}");
  $("#delete_{{ item.id }}").data("id", "{{ item.id }}");
</script>
{% endif %}